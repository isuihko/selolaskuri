<h1>Selolaskuri</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            Oma vahvuusluku:
            @Html.TextBoxFor(e => e.selo_in, new { size = "4" })
            <p></p>
            Oma pelimäärä (jos ≤ 10):
            @Html.TextBoxFor(e => e.pelimaara_in, new { size = "4" })
            <p></p>

            Miettimisaika<br />
            <fieldset>
                <label>
                    @Html.RadioButtonFor(e => e.miettimisaika_radiobutton_in, 90) ≥ 90 min
                </label>
                <label>
                    @Html.RadioButtonFor(e => e.miettimisaika_radiobutton_in, 89) 60-89 min
                </label>
                <label>
                    @Html.RadioButtonFor(e => e.miettimisaika_radiobutton_in, 59) 11-59 min
                </label>
                <label>
                    @Html.RadioButtonFor(e => e.miettimisaika_radiobutton_in, 10) ≤ 10 min
                </label>
            </fieldset>


            Vastustaja/vastustajat tuloksineen (+ on voitto, - on tappio, = tai tyhjä on tasapeli)
            <br />
            @Html.TextBoxFor(e => e.vastustajat_in, new { size = "120" })
            <br />

            @Html.TextAreaFor(e => e.Vastustajat_ohjeteksti, new { @class = "required", @rows = 5, @cols = 110 })

            <p></p>

            @*1ST SUBMIT BUTTON*@
            <div class="form-group">
                <input type="submit" value="< Laske vahvuusluku >" asp-page-handler="LaskeVahvuusluku" class="btn btn-default" />
            </div>

            <font size="2">
                @ViewData["virheteksti"]
            </font>

            @*XXX: ORGANIZE OUTPUT*@

            <h2>
                @ViewData["TULOKSET"]
            </h2>

            @ViewData["uusi_selo"]
            <br />
            @ViewData["selomuutos"]
            <p />
            @ViewData["uusi_pelimaara"]  @ViewData["uudenpelaajanlaskenta"]
            <p />
            @ViewData["turnauksentulos"]
            <br />
            @ViewData["odotustulos"]
            <p />
            @ViewData["keskivahvuus"]
            <p />
            @ViewData["suoritusluku"]

            @*2ND SUBMIT BUTTON*@
            <div class="form-group">
                <input type="submit" value="< Kopioi uusi vahvuusluku jatkolaskentaan >" asp-page-handler="KaytaTulostaJatkolaskennassa" class="btn btn-default" border="2" />
            </div>
        </form>
    </div>
</div>

